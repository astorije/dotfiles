[user]
  name = Jérémie Astori
[instaweb]
  httpd = apache2 -f
[push]
  default = simple
[color]
  ui = true
[alias]
  ap = add -p
  ca = commit --amend --no-edit
  ci = commit -m
  cb = "!f() { git checkout -b astorije/$@; }; f"
  cm = checkout master
  co = checkout

  # Branch
  delete-merged = "!git branch --merged | grep -v \"^\\s*master$\" | grep -v \"\\*\" | xargs -n 1 git branch -d"
  dm = !git delete-merged
  pru = remote prune origin

  # Rebase
  rb = rebase
  ra = rebase --abort
  rc = rebase --continue
  ri = rebase --interactive
  rbm = rebase master

  st = status
  staged = diff --staged
  cht = config user.email "jeremie@cloudhealthtech.com"
  perso = config user.email "jeremie@astori.fr"
  graph = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
[core]
  editor = atom --wait
  excludesfile = ~/.gitignore_global
[credential]
  helper = cache --timeout=21600
  username = astorije
